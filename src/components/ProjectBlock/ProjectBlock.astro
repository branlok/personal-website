---
const { imageUrl } = Astro.props;
---

<div class="project">
    <img src={imageUrl} alt="" />
</div>

<style>
    .project {
        transition: 0.1s;
        border-bottom: 5px solid transparent;
        aspect-ratio: 1/1;
        overflow: hidden;
        &:hover {
            border-bottom: 5px solid rgb(56, 56, 56);
        }
    }
    img {
        width: 100%;
        height: 100%;
        aspect-ratio: 1/1;
        padding: 0px;
        margin: 0px;
        object-fit: cover;
        
    }
</style>
