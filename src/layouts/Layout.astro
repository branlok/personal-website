---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>

<style is:global>
    :root {
        --xs: 0.5rem;
        --sm: 0.75rem; /* 12px */
        --base: 1rem; /* 16px, base */
        --lg: 1.25rem; /* 20px */
        --xl: 1.5rem; /* 24px */
        --xxl: 1.75rem; /* 28px */
        --xxxl: 2rem; /* 32px */
        --xxxxl: 4rem;
    }

    html {
        font-family: system-ui, sans-serif;
        background-color: black;
        height: 100%;
        position: relative;
    }
    code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
            Bitstream Vera Sans Mono, Courier New, monospace;
    }
    body {
        width: 100%;
        height: 100%;
        margin: 0px;
        padding: 0px;
        display: flex;
        justify-content: center;
    }
    main,
    div,
    body {
        box-sizing: border-box;
    }
    h1,
    h2 {
        margin: 0px;
        padding: 0px;
    }

    .flex-rcc {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .flex-rc {
        display: flex;
        justify-content: center;
    }
    .flex-cc {
        display: flex;
        justify-content: center;
        flex-direction: column;
    }
    .flex-ccc {
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
    }
</style>
